<tr>
  <td><code><%= catalog.blueprint.presence || "n/a" %></code></td>
  <td><%= catalog.platform.presence || "n/a" %></td>
  <td><%= catalog.bytes.present? ? number_to_human_size(catalog.bytes.to_i, precision: 2, strip_insignificant_zeros: true) : "n/a" %></td>
  <td><%= catalog.files || "n/a" %></td>
  <td><%= catalog.directories || "n/a" %></td>
  <td><%= catalog.relocations || "n/a" %></td>
  <td><%= catalog.age_in_days.nil? ? "n/a" : "#{catalog.age_in_days}d" %></td>
  <td><%= catalog.days_since_last_use.nil? ? "n/a" : "#{catalog.days_since_last_use}d" %></td>
  <td>
    <% if catalog.identity_key.present? %>
      <code title="<%= catalog.identity_yaml %>"><%= catalog.identity_key.first(16) %>...</code>
    <% else %>
      n/a
    <% end %>
  </td>
  <td>
    <% if catalog.holotree.present? %>
      <code><%= catalog.holotree %></code>
    <% else %>
      n/a
    <% end %>
  </td>
  <td>
    <% if catalog.status == :unknown %>
      <span class="chip">Unknown</span>
    <% elsif catalog.status == :stale %>
      <span class="chip warning">Stale</span>
    <% else %>
      <span class="chip ok">Active</span>
    <% end %>
  </td>
</tr>
