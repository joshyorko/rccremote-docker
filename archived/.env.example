# RCC Remote Docker - Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# Server Configuration
# =============================================================================

# Server hostname/domain name
# Development: rccremote.local
# Production: your-domain.com
SERVER_NAME=rccremote.local

# RCC Remote origin URL (used by RCC clients)
# Development: https://rccremote.local:8443
# Production: https://your-domain.com
RCC_REMOTE_ORIGIN=https://rccremote.local:8443

# Robocorp home directory inside the container
ROBOCORP_HOME=/opt/robocorp

# =============================================================================
# Production Deployment Paths
# =============================================================================

# Path to robot definitions
ROBOTS_PATH=./data/robots

# Path to pre-built hololib ZIP files
HOLOLIB_ZIP_PATH=./data/hololib_zip

# Path to SSL certificates
CERTS_PATH=./certs

# Path to configuration files
CONFIG_PATH=./config

# Path to utility scripts
SCRIPTS_PATH=./scripts

# =============================================================================
# Cloudflare Tunnel Configuration
# =============================================================================

# Cloudflare Tunnel authentication token
# Get this from: https://one.dash.cloudflare.com/
# CF_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Optional: Cloudflare tunnel name
# CLOUDFLARE_TUNNEL_NAME=rccremote-tunnel

# =============================================================================
# Kubernetes Configuration
# =============================================================================

# Kubernetes namespace
NAMESPACE=rccremote

# Number of replicas for deployment
REPLICAS=3

# Deployment environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker image tag
IMAGE_TAG=latest

# Docker registry (for pushing images)
DOCKER_REGISTRY=ghcr.io
DOCKER_REPO=yorko-io/rccremote-docker

# =============================================================================
# Health Check Configuration
# =============================================================================

# Health check interval (seconds)
HEALTHCHECK_INTERVAL=30

# Health check timeout (seconds)
HEALTHCHECK_TIMEOUT=10

# Health check retries
HEALTHCHECK_RETRIES=3

# Health check start period (seconds)
HEALTHCHECK_START_PERIOD=60

# =============================================================================
# Advanced Configuration
# =============================================================================

# RCC configuration
# RCC_TELEMETRY_ENABLED=false
# RCC_VERBOSE=false

# Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
# DEBUG=false

# =============================================================================
# Security Configuration
# =============================================================================

# SSL/TLS configuration
# SSL_PROTOCOLS=TLSv1.2 TLSv1.3
# SSL_CIPHERS=HIGH:!aNULL:!MD5

# Certificate expiry warning threshold (days)
CERT_EXPIRY_WARNING_DAYS=30

# =============================================================================
# Resource Limits (Kubernetes)
# =============================================================================

# Memory limits
MEMORY_REQUEST=512Mi
MEMORY_LIMIT=2Gi

# CPU limits
CPU_REQUEST=250m
CPU_LIMIT=1000m

# =============================================================================
# Backup Configuration
# =============================================================================

# Backup directory
BACKUP_DIR=./backups

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Development Options
# =============================================================================

# Enable hot reload (development only)
# HOT_RELOAD=true

# Enable verbose logging
# VERBOSE=true

# Skip certificate verification (development only - DO NOT USE IN PRODUCTION)
# SKIP_CERT_VERIFY=false
